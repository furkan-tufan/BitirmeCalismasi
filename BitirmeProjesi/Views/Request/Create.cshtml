@model BitirmeProjesi.Models.Request

@{
    ViewData["Title"] = "İzin Talebi";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Talep Oluştur" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
