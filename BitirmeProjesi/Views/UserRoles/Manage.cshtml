@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Rolleri Düzenle";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2> @ViewBag.UserName için Rolleri Düzenle</h2>

        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Güncelle" class="btn btn-success"
                   style="width:auto" />
        </div>
    </div>
</form>